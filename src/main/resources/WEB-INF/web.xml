<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LocationServlet</servlet-name>
        <servlet-class>ru.drondrin.servlet.api.LocationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LocationServlet</servlet-name>
        <url-pattern>/api/v1/location/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ForecastServlet</servlet-name>
        <servlet-class>ru.drondrin.servlet.api.ForecastServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ForecastServlet</servlet-name>
        <url-pattern>/api/v1/forecast/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>WeatherServlet</servlet-name>
        <servlet-class>ru.drondrin.servlet.api.WeatherServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WeatherServlet</servlet-name>
        <url-pattern>/weather/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WeatherServlet</servlet-name>
        <url-pattern>/weather</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>ru.drondrin.servlet.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern/>
    </servlet-mapping>
</web-app>